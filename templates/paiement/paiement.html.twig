{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
    <h1>Formulaire de Paiement</h1>
    
    <form action="{{ path('valider_paiement') }}" method="POST" class="payment-form">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required placeholder="Entrez votre nom">

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" required placeholder="Entrez votre email">

        <label for="montant">Montant :</label>
        <input type="number" id="montant" name="montant" value="{{ total }}" readonly placeholder="Montant à payer">

        <label for="methode_paiement">Méthode de paiement :</label>
        <select id="methode_paiement" name="methode_paiement">
            <option value="carte">Carte bancaire</option>
            <option value="paypal">PayPal</option>
        </select>

        <label for="numero_carte_bleu">Numéro de Carte Bleu :</label>
        <input type="text" id="numero_carte_bleu" name="numero_carte_bleu" required placeholder="Entrez le numéro de votre carte">

        <button type="submit" class="submit-button">Payer</button>
    </form>

    <style>
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            box-sizing: border-box;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }

        .payment-form {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            margin: 20px;
        }

        .payment-form label {
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
            color: #555;
        }

        .payment-form input,
        .payment-form select {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .payment-form input[readonly] {
            background-color: #f5f5f5;
        }

        .payment-form input:focus,
        .payment-form select:focus {
            border-color: #007bff;
            outline: none;
        }

        .payment-form button.submit-button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 15px 20px;
            width: 100%;
            font-size: 1.2em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .payment-form button.submit-button:hover {
            background-color: #218838;
        }

        .payment-form input::placeholder {
            color: #888;
        }
    </style>
{% endblock %}
